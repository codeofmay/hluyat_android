<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/blue</item>
    </style>

    <style name="ThemeDialog" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowTitleStyle">@style/DialogWindowTitle</item>
        <item name="colorAccent">@color/blue</item>
    </style>

    <style name="ListDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowTitleStyle">@style/ListDialogWindowTitle</item>
        <item name="colorAccent">@color/blue</item>
    </style>

    <style name="DialogWindowTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ListDialogWindowTitle">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="NavigationDrawerStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:typeface">sans</item>


    </style>
    <style name="AppTheme.NoActionBar" parent="@style/Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="colorAccent">@color/blue</item>
        <item name="android:editTextStyle">@style/Widget.App.EditText</item>

    </style>
    <style name="Widget.App.EditText" parent="Widget.AppCompat.EditText">
        <item name="colorAccent">@color/blue</item>
        <item name="colorControlNormal">@color/grey</item>
        <item name="colorControlActivated">#1b1b1b</item>
        <item name="colorControlHighlight">#1B1B1B</item>

    </style>

    <style name="Widget.App.TextHint" parent="TextAppearance.AppCompat">
        <item name="colorAccent">@color/blue</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomActionBarTheme" parent="@style/Theme.AppCompat.Light">

        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="TransparentActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/colorTransparent</item>
    </style>


    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/Theme.AppCompat.Light">
    </style>



    <style name="Theme.AppCompat.Transparent" parent="android:Theme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/blue</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>
