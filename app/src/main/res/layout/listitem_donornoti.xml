<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_donor_noti"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="6"
    android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/relative"
        android:layout_width="0dp"
        android:layout_weight="1.3"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_charityimage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_person_black_24dp" />
</LinearLayout>
    <RelativeLayout
        android:id="@+id/linear_item"
        android:layout_width="0dp"
        android:layout_weight="3.7"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/img_charityimage"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lab_charityname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:gravity="left"
            android:padding="2dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/black"
            android:lineSpacingExtra="2dp"
            android:textSize="@dimen/text_size_secondarytitle"
            tools:text="kljfkdsjf jgkfdlgj lfdjg fdjlkgjdf kgjdfkljgkjdjkhjhjhjhjhjkhjhjkhjhjfkgjdf gjklfdjgkjkfldgdf" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_below="@id/lab_charityname"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lab_itemcategory"
                android:layout_width="wrap_content"
                android:padding="2dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="@dimen/text_size_primarydescription" />

            <TextView
                android:id="@+id/textView1_donornoti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:text=":" />

            <TextView
                android:id="@+id/lab_itemamount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:padding="2dp"
                android:textSize="@dimen/text_size_primarydescription" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:layout_marginRight="12dp"
        android:layout_marginTop="4dp"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_notistatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="4dp"
            android:layout_alignParentTop="true"
            />

        <TextView
            android:id="@+id/lab_notiduration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            tools:text="2 day"
            android:layout_marginBottom="4dp"
            android:textSize="10.5sp"
            />
    </RelativeLayout>

</LinearLayout>
