<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_height="match_parent"
    android:layout_width="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@color/white"
    android:layout_gravity="center"
    tools:context="com.project.mt.dc.AboutFragment">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/lat"
        android:scaleType="centerCrop"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="132dp"
        android:layout_marginLeft="8dp"
        android:src="@drawable/hlu_triangle_inches"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Version: 1.1.1"
        android:textSize="@dimen/text_size_title"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/text_size_secondarytitle"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:padding="16dp"
        android:text="A Small Donation Community to connect donors and charities."
        android:textColor="@color/black"/>

    <android.support.v7.widget.CardView
        android:id="@+id/card_terms"
        android:layout_width="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:text="Terms And Agreement"
            android:textColor="@color/blue"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_licenses"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:text="Open Source Licenses"
            android:textColor="@color/blue"/>
    </android.support.v7.widget.CardView>
</LinearLayout>
</ScrollView>