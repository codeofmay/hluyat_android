<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="com.project.mt.dc.MainDonationActivity"

    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:theme="@style/CustomActionBarTheme">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_mainDonation"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relative_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_donationImage"
                android:layout_width="match_parent"
                android:layout_height="185dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img" />

            <View
                android:layout_width="match_parent"
                android:layout_height="185dp"
                />
            <LinearLayout
                android:layout_alignBottom="@id/img_donationImage"
                android:gravity="center"
                android:layout_width="match_parent"
                android:background="#80000000"
                android:layout_height="185dp"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:paddingBottom="8dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/background" />

                        <TextView
                            android:id="@+id/text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="DONATION TO"
                            android:paddingTop="4dp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/background"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView

                        android:id="@+id/lab_donationname"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:paddingTop="4dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/background"
                        android:textSize="16sp"
                        tools:text="Hnin Si Kone" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingTop="4dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginRight="2dp"
                            android:src="@drawable/ic_place_black_24dp" />

                        <TextView
                            android:id="@+id/lab_donationplace"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Than Lyin"
                            android:layout_marginRight="8dp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/background"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginRight="2dp"
                            android:src="@drawable/ic_access_time_black_24dp"
                            />

                        <TextView
                            android:id="@+id/lab_donationdate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/background"
                            android:textSize="14sp"
                            tools:text="27/4/3028" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linear_charity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:layout_below="@id/relative_request"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_charityimage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_person_black_24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:gravity="left|center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/lab_charityname"
                android:layout_width="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingBottom="2dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                tools:text="Say Ta nar Payahita"
                android:textSize="@dimen/text_size_title"
                />
            <TextView
                android:id="@+id/lab_donationdescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text=" dkjfdsfslkf fdkjsfkjdsklf sdjfklsdjlkfj sdkjfkdsjfksd fjksdjkjds"
                android:textColor="@color/text"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:textSize="@dimen/text_size_secondarytitle"
                android:layout_marginTop="2dp"
                android:gravity="left" />
            </LinearLayout>
            </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/linear_charity">
            <TextView
                android:id="@+id/lab_nodonor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="There is no donor yet."
                android:textSize="@dimen/text_size_title"
                android:textColor="@color/title_grey"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="100dp"
                />
            <android.support.v7.widget.RecyclerView
                android:nestedScrollingEnabled="false"
                android:id="@+id/recycler_maindonation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="37dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="@dimen/padding_medium"
                tools:listitem="@layout/listitem_maindonation"/>
        </RelativeLayout>

    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>