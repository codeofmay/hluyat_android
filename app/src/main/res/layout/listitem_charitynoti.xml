                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"
                    android:textSize="@dimen/text_size_primarydescription"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="100" />
