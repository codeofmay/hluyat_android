<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.project.mt.dc.donor.activity.NotiDetailActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:theme="@style/CustomActionBarTheme">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_notiDetail"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <ImageView
        android:id="@+id/img_requesimage"
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/img" />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/linear_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_charityimage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_person_black_24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:gravity="left|center_vertical"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/linear_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Donation To"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_show"
                    android:textStyle="bold"
                    android:gravity="left"/>
                <TextView
                    android:id="@+id/lab_requestplace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:textSize="@dimen/text_size_show"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    tools:text="Hni sdfjkdsfjsdjflksdjf kdsjklf jdskfjkdsfds fkdsj"
                    android:gravity="left"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="2dp"
                    android:layout_marginRight="4dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="By"
                    android:textSize="@dimen/text_size_title"
                    />
                <TextView
                    android:id="@+id/lab_charityname"
                    android:layout_width="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="2dp"
                    android:textStyle="bold"
                    android:textColor="@color/blue"
                    tools:text="Say Ta nar Payahita"
                    android:textSize="@dimen/text_size_title"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/lab_requestdescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text=" dkjfdsfslkf fdkjsfkjdsklf sdjfklsdjlkfj sdkjfkdsjfksd fjksdjkjds"
                android:textColor="@color/text"
                android:padding="2dp"
                android:textSize="@dimen/text_size_secondarytitle"
                android:layout_marginTop="4dp"
                android:gravity="left" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:gravity="left|center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_place_black_24dp"/>
                <TextView
                    android:id="@+id/lab_requestlocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Nay Yar Hound "
                    android:padding="2dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_primarydescription"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:gravity="left|center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_access_time_black_24dp"/>
                <TextView
                    android:id="@+id/lab_requestdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Nay Yar Hound "
                    android:padding="2dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_primarydescription"
                    android:textAlignment="center" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_below="@id/linear_request"
        android:gravity="center"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textSize="@dimen/text_size_primarydescription"
            android:textColor="@color/black"
            android:gravity="right"
            android:textStyle="bold"
            android:text="Request Item - "/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:background="@color/light_blue"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/lab_itemcategory"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            tools:text="Nay Yar Hound "
            android:padding="2dp"
            android:textColor="@color/black"
            android:gravity="right"
            android:textSize="@dimen/text_size_primarydescription"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" :"
            android:padding="2dp"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_primarydescription"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/lab_itemamount"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            tools:text="Nay Yar Hound"
            android:padding="2dp"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_primarydescription"
            android:gravity="left"/>
</LinearLayout>
    </LinearLayout>

     <LinearLayout
         android:id="@+id/linear_status"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:gravity="center"
         android:layout_marginTop="8dp"
         android:layout_marginBottom="4dp"
         android:layout_below="@id/linear_item"
       android:orientation="horizontal">
       <ImageView
           android:id="@+id/img_notistatus"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/ic_info_black_24dp"
           />
       <TextView
           android:id="@+id/lab_notistatus"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="The charity can contact you if you accept to donate!"
           android:textSize="12sp"
           />
   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp"
        android:paddingBottom="12dp"
        android:layout_marginTop="4dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/linear_status"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:background="@drawable/white_btn"
            android:layout_marginRight="5dp"
            android:onClick="onClickAccept"
            android:text="Accept" />

        <Button
            android:id="@+id/btn_deny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/white_btn"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:onClick="onClickCancel"
            android:text="Delete" />
    </LinearLayout>
    </RelativeLayout>
</LinearLayout>
</ScrollView>